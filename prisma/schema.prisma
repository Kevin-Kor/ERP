generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id         String   @id @default(cuid())
  action     String
  entityType String
  entityId   String
  createdAt  DateTime @default(now())
  userId     String
  User       User     @relation(fields: [userId], references: [id])
}

model CalendarEvent {
  id            String    @id @default(cuid())
  title         String
  date          DateTime
  endDate       DateTime?
  type          String
  color         String?
  memo          String?
  googleEventId String?   @unique // Google Calendar event ID for sync
  syncedAt      DateTime? // Last synced with Google
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  projectId     String?
  userId        String?
  Project       Project?  @relation(fields: [projectId], references: [id])
  User          User?     @relation(fields: [userId], references: [id])

  @@index([date])
  @@index([userId])
}

model Client {
  id          String        @id @default(cuid())
  name        String
  contactName String
  phone       String
  email       String?
  businessNo  String?
  address     String?
  industry    String?
  status      String        @default("ACTIVE")
  memo        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Document    Document[]
  Project     Project[]
  Transaction Transaction[]
}

model Document {
  id        String   @id @default(cuid())
  type      String
  docNumber String   @unique
  issueDate DateTime
  amount    Float
  status    String   @default("ISSUED")
  filePath  String?
  memo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clientId  String
  projectId String?
  Client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  Project   Project? @relation(fields: [projectId], references: [id])
}

model Influencer {
  id                String              @id @default(cuid())
  name              String
  instagramId       String?
  youtubeChannel    String?
  blog              String?
  followerCount     Int?
  categories        String?
  phone             String
  bankAccount       String?
  priceRange        String?
  memo              String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  ProjectInfluencer ProjectInfluencer[]
  Transaction       Transaction[]
}

model Project {
  id                String              @id @default(cuid())
  name              String
  status            String              @default("QUOTING")
  startDate         DateTime
  endDate           DateTime
  contractAmount    Float
  platforms         String?
  contentTypes      String?
  memo              String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  clientId          String
  managerId         String?
  CalendarEvent     CalendarEvent[]
  Document          Document[]
  Client            Client              @relation(fields: [clientId], references: [id], onDelete: Cascade)
  User              User?               @relation(fields: [managerId], references: [id])
  ProjectInfluencer ProjectInfluencer[]
  Transaction       Transaction[]

  @@index([status])
  @@index([endDate])
  @@index([clientId])
}

model ProjectInfluencer {
  id             String     @id @default(cuid())
  fee            Float
  paymentStatus  String     @default("PENDING")
  paymentDueDate DateTime?
  paymentDate    DateTime?
  proofFile      String?
  contentStatus  String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  projectId      String
  influencerId   String
  Influencer     Influencer @relation(fields: [influencerId], references: [id], onDelete: Cascade)
  Project        Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, influencerId])
  @@index([paymentStatus])
  @@index([paymentDueDate])
}

model Transaction {
  id            String      @id @default(cuid())
  date          DateTime
  type          String
  category      String
  amount        Float
  vatIncluded   Boolean     @default(true)
  paymentStatus String      @default("PENDING")
  paymentDate   DateTime?
  memo          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  clientId      String?
  projectId     String?
  influencerId  String?
  Client        Client?     @relation(fields: [clientId], references: [id])
  Influencer    Influencer? @relation(fields: [influencerId], references: [id])
  Project       Project?    @relation(fields: [projectId], references: [id])

  @@index([date, type])
  @@index([type, paymentStatus])
  @@index([clientId])
  @@index([projectId])
}

model User {
  id                 String          @id @default(cuid())
  email              String          @unique
  password           String
  name               String
  role               String          @default("MEMBER")
  googleAccessToken  String? // Google OAuth access token
  googleRefreshToken String? // Google OAuth refresh token
  googleTokenExpiry  DateTime? // Token expiry time
  googleCalendarId   String? // Selected Google Calendar ID
  googleSyncEnabled  Boolean         @default(false) // Enable/disable sync
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  Activity           Activity[]
  CalendarEvent      CalendarEvent[]
  Project            Project[]
}
